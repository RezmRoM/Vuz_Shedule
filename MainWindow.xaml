<Window x:Class="Vuz_Shedule.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vuz_Shedule"
        mc:Ignorable="d"
        Title="Выбор роли" 
        WindowState="Maximized"
        MinWidth="1280"
        MinHeight="720"
        FontFamily="Bookman Old Style"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Анимация для карточек при наведении -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Width" Value="280"/>
            <Setter Property="Height" Value="380"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform Y="0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" 
                                    Color="{StaticResource SecondaryColorValue}" 
                                    Opacity="0.2"
                                    ShadowDepth="5"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                                To="25" Duration="0:0:0.2">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation 
                                Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                To="0.4" Duration="0:0:0.2">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation 
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                To="-10" Duration="0:0:0.2">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                                To="15" Duration="0:0:0.2">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation 
                                Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                To="0.2" Duration="0:0:0.2">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation 
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                To="0" Duration="0:0:0.2">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <!-- Ресурс для тени текста -->
        <DropShadowEffect x:Key="TitleShadowEffect"
                          Color="{StaticResource SecondaryColorValue}"
                          BlurRadius="10"
                          ShadowDepth="3"
                          Opacity="0.3"/>

        <!-- Стиль для кнопок -->
        <Style x:Key="LocalRoleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="contentPresenter"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect Color="{StaticResource SecondaryColorValue}" 
                                                Opacity="0.3" 
                                                BlurRadius="5" 
                                                ShadowDepth="2"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="border"
                                                      Storyboard.TargetProperty="Background.Color"
                                                      To="#F8F3E6"
                                                      Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="border"
                                                       Storyboard.TargetProperty="Effect.BlurRadius"
                                                       To="10"
                                                       Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="border"
                                                      Storyboard.TargetProperty="Background.Color"
                                                      To="#FFFFFF"
                                                      Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="border"
                                                       Storyboard.TargetProperty="Effect.BlurRadius"
                                                       To="5"
                                                       Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Background>
        <ImageBrush ImageSource="https://i.postimg.cc/9QmW3vJC/image-50.png" Stretch="UniformToFill" Opacity="0.95"/>
    </Window.Background>

    <Border Margin="40" CornerRadius="20" Background="{StaticResource BackgroundColor}" 
            BorderBrush="{StaticResource SecondaryColor}" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" 
                            Color="{StaticResource SecondaryColorValue}" 
                            Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Выберите вашу роль" 
                       Grid.Row="0"
                       HorizontalAlignment="Center"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryColor}"
                       Margin="0,40">
                <TextBlock.Effect>
                    <DropShadowEffect Color="{StaticResource SecondaryColorValue}" 
                                    BlurRadius="10" 
                                    ShadowDepth="3" 
                                    Opacity="0.3"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Cards Container -->
            <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Преподаватель -->
                <Border x:Name="TeacherCard"
                        Style="{StaticResource CardStyle}"
                        Grid.Column="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Image Section -->
                        <Border Grid.Row="0" 
                                CornerRadius="15,15,0,0"
                                Background="White"
                                Margin="10">
                            <Image Source="teacher.jpg" 
                                   Stretch="UniformToFill"
                                   RenderOptions.BitmapScalingMode="HighQuality">
                                <Image.Clip>
                                    <RectangleGeometry Rect="0,0,280,280" RadiusX="15" RadiusY="15"/>
                                </Image.Clip>
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="10" 
                                                    Color="{StaticResource SecondaryColorValue}" 
                                                    Opacity="0.2"
                                                    ShadowDepth="5"/>
                                </Image.Effect>
                            </Image>
                        </Border>

                        <!-- Button Section -->
                        <Button Grid.Row="1"
                                Content="Преподаватель" 
                                Style="{StaticResource LocalRoleButtonStyle}"
                                Margin="0,0,0,20"
                                HorizontalAlignment="Center"
                                Click="TeacherButton_Click"/>
                    </Grid>
                </Border>

                <!-- Студент -->
                <Border x:Name="StudentCard"
                        Style="{StaticResource CardStyle}"
                        Grid.Column="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Image Section -->
                        <Border Grid.Row="0" 
                                CornerRadius="15,15,0,0"
                                Background="White"
                                Margin="10">
                            <Image Source="student.jpg" 
                                   Stretch="UniformToFill"
                                   RenderOptions.BitmapScalingMode="HighQuality">
                                <Image.Clip>
                                    <RectangleGeometry Rect="0,0,280,280" RadiusX="15" RadiusY="15"/>
                                </Image.Clip>
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="10" 
                                                    Color="{StaticResource SecondaryColorValue}" 
                                                    Opacity="0.2"
                                                    ShadowDepth="5"/>
                                </Image.Effect>
                            </Image>
                        </Border>

                        <!-- Button Section -->
                        <Button Grid.Row="1"
                                Content="Студент" 
                                Style="{StaticResource LocalRoleButtonStyle}"
                                Margin="0,0,0,20"
                                HorizontalAlignment="Center"
                                Click="StudentButton_Click"/>
                    </Grid>
                </Border>

                <!-- Администратор -->
                <Border x:Name="AdminCard"
                        Style="{StaticResource CardStyle}"
                        Grid.Column="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Image Section -->
                        <Border Grid.Row="0" 
                                CornerRadius="15,15,0,0"
                                Background="White"
                                Margin="10">
                            <Image Source="administrator.jpg" 
                                   Stretch="UniformToFill"
                                   RenderOptions.BitmapScalingMode="HighQuality">
                                <Image.Clip>
                                    <RectangleGeometry Rect="0,0,280,280" RadiusX="15" RadiusY="15"/>
                                </Image.Clip>
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="10" 
                                                    Color="{StaticResource SecondaryColorValue}" 
                                                    Opacity="0.2"
                                                    ShadowDepth="5"/>
                                </Image.Effect>
                            </Image>
                        </Border>

                        <!-- Button Section -->
                        <Button Grid.Row="1"
                                Content="Администратор" 
                                Style="{StaticResource LocalRoleButtonStyle}"
                                Margin="0,0,0,20"
                                HorizontalAlignment="Center"
                                Click="AdminButton_Click"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer -->
            <TextBlock Grid.Row="2" 
                       Text="© Университетское расписание 2025"
                       HorizontalAlignment="Center"
                       FontSize="14"
                       Foreground="{StaticResource SecondaryColor}"
                       Margin="0,20"/>
        </Grid>
    </Border>
</Window>